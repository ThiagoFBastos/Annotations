<div class = "container">
    <br>
    <br>
    <div class = "row">
        <div class = "col">
            <div class="list-group" id="list-tab" role="tablist">
             {{#if profileTab}}
              <a class="list-group-item list-group-item-action active" id="list-profile-list" data-bs-toggle="list" href="#list-profile" role="tab">Perfil</a>
             {{else}}
              <a class="list-group-item list-group-item-action" id="list-profile-list" data-bs-toggle="list" href="#list-profile" role="tab">Perfil</a>
             {{/if}}
             {{#if passwordTab}}
              <a class="list-group-item list-group-item-action active" id="list-password-list" data-bs-toggle="list" href="#list-password" role="tab">Atualização de senha</a>
             {{else}}
              <a class="list-group-item list-group-item-action" id="list-password-list" data-bs-toggle="list" href="#list-password" role="tab">Atualização de senha</a>
             {{/if}}            
            </div>
        </div>
        <div class = "col">
            <div class = "tab-content">
                {{#if profileTab}}
                <div class="tab-pane fade show active" role="tabpanel" id="list-profile">
                {{else}}
                <div class="tab-pane fade" role="tabpanel" id="list-profile">
                {{/if}}
                    {{#if alertProfile}}
		                <div class = "alert {{alertProfile.class}}" role="alert">
	                  		{{alertProfile.message}}
		                </div>
	                {{/if}}
	                <form method="post" action="/users/profile">
		                <div class="form-group">
			                <label>Primeiro Nome</label>
                            {{#if firstNameErrors}}
			                    <input class="form-control is-invalid" type="text" name="first_name" value = "{{user.first_name}}">
                                <div class="invalid-feedback">
                                    {{#each firstNameErrors}}
                                        {{msg}} <br>
                                    {{/each}}
                                </div>                    
                            {{else}}
			                    <input class="form-control" type="text" name="first_name" value = "{{user.first_name}}">
                            {{/if}}
		                </div>
			            <br>
		                <div class="form-group">
			                <label>Último Nome</label>
                            {{#if lastNameErrors}}
			                    <input class="form-control is-invalid" type="text" name="last_name" value = "{{user.last_name}}">
                                <div class="invalid-feedback">
                                    {{#each lastNameErrors}}
                                        {{msg}} <br>
                                    {{/each}}
                                </div>
                            {{else}}
                                <input class="form-control" type="text" name="last_name" value = "{{user.last_name}}">
                            {{/if}}
		                </div>
			            <br>
		                <div class="form-group">
			                <label>Email</label>
                            {{#if emailErrors}}
			                    <input class="form-control is-invalid" type="email" name="email" value = "{{user.email}}">
                                <div class="invalid-feedback">
                                    {{#each emailErrors}}
                                        {{msg}} <br>
                                    {{/each}}
                                </div>
                            {{else}}
			                    <input class="form-control" type="email" name="email" value = "{{user.email}}">
                            {{/if}}
		                </div>
                        <br>
		                <div class="form-group">
			                <label>Senha</label>
			                <input class="form-control" type="password" name="password" required>
		                </div>
			            <br>
                        <div class="d-grid gap-2 mx-auto">
                            <button class="btn btn-primary" type = "submit">Enviar</button>
                        </div>
	                </form>
                </div>
                {{#if passwordTab}}
                <div class="tab-pane fade show active" role="tabpanel" id="list-password">
                {{else}}
                <div class="tab-pane fade" role="tabpanel" id="list-password">
                {{/if}}
                    {{#if alertPassword}}
		                <div class = "alert {{alertPassword.class}}" role="alert">
	                  		{{alertPassword.message}}
		                </div>
	                {{/if}}
                    <form action = "/users/password" method = "post">
                        <div class = "form-group">
                            <label>Nova senha</label>
                            {{#if newPasswordErrors}}
                                <input name = "new_password" class = "form-control is-invalid" type = "password">
                                <div class="invalid-feedback">
                                    {{#each newPasswordErrors}}
                                        {{msg}} <br>
                                    {{/each}}
                                </div>
                            {{else}}
                                <input name = "new_password" class = "form-control" type = "password">
                            {{/if}}
                        </div>
                        <br>
                        <div class = "form-group">
                            <label>Confirme a nova senha</label>
                            {{#if newPasswordConfirmErrors}}
                                <input name = "new_password_confirm" class = "form-control is-invalid" type = "password">
                                <div class="invalid-feedback">
                                    {{#each newPasswordConfirmErrors}}
                                        {{msg}} <br>
                                    {{/each}}
                                </div>
                            {{else}}
                                <input name = "new_password_confirm" class = "form-control" type = "password">
                            {{/if}}
                        </div>
                        <br>
                        <div class = "form-group">
                            <label>Senha atual</label>
                            {{#if passwordErrors}}
                                <input name = "password" class = "form-control is-invalid" type = "password">
                                <div class="invalid-feedback">
                                    {{#each passwordErrors}}
                                        {{msg}} <br>
                                    {{/each}}
                                </div>
                            {{else}}
                                <input name = "password" class = "form-control" type = "password">
                            {{/if}}
                        </div>
                        <br>
                        <div class="d-grid gap-2 mx-auto">
                            <button class="btn btn-primary" type = "submit">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
